<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" >
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_clientes" android:background="@drawable/menu_cliente"
            tools:layout_editor_absoluteX="72dp" tools:ignore="MissingConstraints"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/button_menu"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_empresa"
            android:background="@drawable/menu_empresa"
            app:layout_constraintStart_toEndOf="@+id/button_clientes"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/button_menu"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_servicos" android:background="@drawable/menu_servico"
            app:layout_constraintEnd_toStartOf="@+id/button_contato" android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="184dp" app:layout_constraintTop_toBottomOf="@+id/button_menu"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_contato"
            android:background="@drawable/menu_contato"
            tools:layout_editor_absoluteX="223dp"
            android:layout_marginTop="184dp" app:layout_constraintTop_toBottomOf="@+id/button_menu"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="72dp" android:id="@+id/button_menu" android:background="@drawable/logo"
            android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>