<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".MainActivity">

<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            app:srcCompat="@drawable/celular"
            android:id="@+id/imageView" android:layout_height="200dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"/>
    <TextView
            android:text="Android Kotlin domina o mundo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <TextView
            android:text="22-03-2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:text="Nullam faucibus nec odio eget ornare. Etiam maximus sodales erat ac venenatis. Vestibulum id metus orci. In rhoncus eu turpis sit amet aliquet. Pellentesque eu dolor id diam tincidunt semper ac sed nulla. Nulla sodales tempor auctor. Nulla id metus rhoncus, tincidunt arcu eu, accumsan libero. Sed vulputate, ante vel convallis iaculis, erat tortor aliquam neque, quis porta mauris nisi quis justo. Mauris a fermentum purus. Etiam ut eleifend libero, id maximus massa. In sit amet cursus enim, eget malesuada mi. Aliquam sit amet sollicitudin est. Cras placerat ipsum finibus nibh consequat, non vehicula leo egestas. Etiam erat turpis, ullamcorper vitae rhoncus lacinia, scelerisque sed tortor. Etiam sem mauris, sollicitudin sagittis orci eu, ultricies lacinia ante. Nulla auctor accumsan arcu, et auctor ipsum vehicula a."/>
    <Button
            android:text="Proximo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Anterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintEnd_toStartOf="@+id/button" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Nathan Nascimento"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/textView5"
            app:layout_constraintBaseline_toBaselineOf="@+id/button2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>
</ScrollView>